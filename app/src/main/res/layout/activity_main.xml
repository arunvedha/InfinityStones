<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/parent_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.android.infinitystones.MainActivity">
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/random_stone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="16dp"
        android:background="#98fb98"
        android:layout_marginLeft="16dp"
        android:textSize="20dp"
        android:text="CHOOSE A STONE"/>
    <TextView
        android:id="@+id/color_stone_view"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/stone_picked_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textAllCaps="true"
        android:background="#FFFFFF"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:background="#fafad2"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:text="reset"/>

</LinearLayout>
    <LinearLayout
        android:id="@+id/list_stones"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">
     <TextView
         android:id="@+id/stones_collected"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="28dp"
         android:layout_marginBottom="16dp"
         android:textSize="20dp"
         android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>



